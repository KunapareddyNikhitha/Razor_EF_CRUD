@page "{id:Guid}"
@model Razor_EF_CRUD.Pages.Products.EditModel
@{
    var updatemessage = ViewData["UpdateMessage"]?.ToString();
}

<!--@{
    var deletemessage = ViewData["DeleteeMessage"]?.ToString();
}-->
<h1 class="mb-3"> Edit Employee</h1>
<form method="post">
@if (!string.IsNullOrWhiteSpace(updatemessage))
    {
        <div class="alert alert-success" role="alert">
            @updatemessage
        </div>
    }
<!--if (!string.IsNullOrWhiteSpace(deletemessage))
   {
       <div class="alert alert-success" role="alert">
           @deletemessage
       </div>
   }-->
<div class="mb-3">
    <label class="form-label">Product Id:</label>
    <input type = "text" class="form-control" asp-for="EditProductViewModel.Id" readonly/>
</div>
<div class="mb-3">
    <label class="form-label">Product Name:</label>
    <input type = "text" class="form-control" asp-for="EditProductViewModel.Name" />
</div>
<div class="mb-3">
    <label class="form-label">Product Price:</label>
    <input type = "text" class="form-control" asp-for="EditProductViewModel.Price" />
</div>
<div class="mb-3">
    <label class="form-label">Product Availability:</label>
    <input type = "text" class="form-control" asp-for="EditProductViewModel.Availability" />
</div>
<div class="mb-3">
    <label class="form-label">Product Category:</label>
    <input type = "text" class="form-control" asp-for="EditProductViewModel.Category" />
</div>
<div class="mb-3 d-flex justify-content-between">
    <button type="submit" class="btn btn-primary" asp-page-handler="Update">
        Update
    </button>
    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">
        Delete
    </button>
</div>

</form>
@page
@model Razor_EF_CRUD.Pages.Products.AddModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
<h1 class="mb-3">Add New Product</h1>
@if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    <div class="mb-3">
    <label class="form-label">Product Name:</label>
    <input type = "text" class="form-control" asp-for="AddProductRequest.Name"/>
</div>
<div class="mb-3">
    <label class="form-label">Product Price:</label>
    <input type = "text" class="form-control" asp-for="AddProductRequest.Price"/>
</div>
<div class="mb-3">
    <label class="form-label">Product Availability:</label>
    <input type = "text" class="form-control" asp-for="AddProductRequest.Availability"/>
</div>
<div class="mb-3">
    <label class="form-label">Product Category:</label>
    <input type = "text" class="form-control" asp-for="AddProductRequest.Category"/>
</div>
<div class="mb-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>